<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">CarM8</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="milespergallon">
                <span class="oi oi-calculator" aria-hidden="true"></span> MPG
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="myvehicles">
                <span class="oi oi-box" aria-hidden="true"></span> My Vehicles
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="newvehicle">
                <span class="oi oi-plus" aria-hidden="true"></span> New Vehicle
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="maintenance">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Maintenance Schedule
            </NavLink>
        </li>
    </ul>
</div>
@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
